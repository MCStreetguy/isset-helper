root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = false

[*.{php,html,htm,xml,xlf}]
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.{yml,yaml,md,json}]
insert_final_newline = true
trim_trailing_whitespace = true

[Makefile]
indent_style = tab
